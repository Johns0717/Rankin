#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int num;

	printf("Please enter integer: \n");
	scanf("%d", &num);

	while (num < 1 || num>14) {
		printf("Error\n");

		printf("Please enter integer: \n");
		scanf("%d", &num);
	}
	printf("You entered: %d\n", num);

	return 0;
}
